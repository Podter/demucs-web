{
  "name": "backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "build": "NODE_ENV=production bun run typecheck && bun build --compile --bytecode --minify --sourcemap src/main.ts --outfile out/backend",
    "preview": "NODE_ENV=production out/backend",
    "typecheck": "tsc --noEmit -p ."
  },
  "dependencies": {
    "elysia": "^1.2.10"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "typescript": "^5.7.3"
  }
}
