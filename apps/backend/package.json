{
  "name": "backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun with-env bun run --watch src/main.ts",
    "build": "NODE_ENV=production bun with-env bun run typecheck && bun run compile",
    "typecheck": "tsc --noEmit -p .",
    "compile": "bun build --compile --bytecode --minify --sourcemap ./src/main.ts --outfile ./out/demucs-web",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@elysiajs/static": "^1.2.0",
    "@t3-oss/env-core": "^0.12.0",
    "elysia": "^1.2.10",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.7.3"
  }
}
